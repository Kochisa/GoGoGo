<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ddffffff">

    <!-- 折叠/展开控制栏 -->
    <LinearLayout
        android:id="@+id/route_panel_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#00796B"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:elevation="4dp">
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="路径导航模式"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>
        
        <ImageButton
            android:id="@+id/btn_toggle_panel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_down"
            android:background="@null"/>
    </LinearLayout>

    <!-- 路径面板内容区域 -->
    <LinearLayout
        android:id="@+id/route_panel_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <!-- 起点和终点输入区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#eeeeee"
            android:padding="12dp">
            
            <!-- 起点输入 -->
            <LinearLayout
                android:id="@+id/start_point_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginBottom="8dp"
                android:padding="8dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_position"
                        app:tint="#00796B"/>
                    
                    <EditText
                        android:id="@+id/route_start_point"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="我的位置"
                        android:paddingLeft="8dp"
                        android:background="@null"
                        android:textSize="14sp"/>
                    
                    <ImageButton
                        android:id="@+id/btn_start_search"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_search"
                        app:tint="#00796B"
                        android:background="@null"/>
                </LinearLayout>
                
                <!-- 起点输入提示列表 -->
                <ListView
                    android:id="@+id/start_suggestion_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="200dp"
                    android:visibility="gone"
                    android:background="#f5f5f5"
                    android:divider="#e0e0e0"
                    android:dividerHeight="1dp"/>
            </LinearLayout>
            
            <!-- 终点输入 -->
            <LinearLayout
                android:id="@+id/end_point_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:padding="8dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_map"
                        app:tint="#D32F2F"/>
                    
                    <EditText
                        android:id="@+id/route_end_point"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="请输入目的地"
                        android:paddingLeft="8dp"
                        android:background="@null"
                        android:textSize="14sp"/>
                    
                    <ImageButton
                        android:id="@+id/btn_end_search"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_search"
                        app:tint="#D32F2F"
                        android:background="@null"/>
                </LinearLayout>
                
                <!-- 终点输入提示列表 -->
                <ListView
                    android:id="@+id/end_suggestion_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="200dp"
                    android:visibility="gone"
                    android:background="#f5f5f5"
                    android:divider="#e0e0e0"
                    android:dividerHeight="1dp"/>
            </LinearLayout>
            
            <!-- 规划路线按钮 -->
            <Button
                android:id="@+id/btn_plan_route"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="规划路线"
                android:textColor="#ffffff"
                android:background="#00796B"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- 提示信息 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/route_mode_tips"
            android:textSize="12sp"
            android:padding="8dp"
            android:gravity="center"/>

        <!-- 路径点列表控制按钮 -->
        <Button
            android:id="@+id/btn_toggle_route_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示路径点"
            android:textColor="#00796B"
            android:background="@android:color/transparent"
            android:textSize="12sp"
            android:padding="4dp"/>

        <!-- 路径点列表 -->
        <ScrollView
            android:id="@+id/route_points_scrollview"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/route_points_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"/>

        </ScrollView>

        <!-- 操作按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_route_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/route_clear"
                android:layout_marginEnd="4dp"
                style="@style/Widget.AppCompat.Button.Colored"/>

            <Button
                android:id="@+id/btn_route_delete_last"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/route_delete_last"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                style="@style/Widget.AppCompat.Button.Colored"/>

            <Button
                android:id="@+id/btn_route_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/route_close"
                android:layout_marginStart="4dp"
                style="@style/Widget.AppCompat.Button.Colored"/>

        </LinearLayout>

        <!-- 速度控制和导航按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#eeeeee">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/route_speed_label"
                android:textSize="14sp"
                android:paddingBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/route_speed_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="400"
                    android:progress="60"/>

                <TextView
                    android:id="@+id/route_speed_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.2 m/s"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="速度浮动范围"
                android:textSize="14sp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/route_speed_variation_seekbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="20"
                    android:progress="0"/>

                <TextView
                    android:id="@+id/route_speed_variation_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_route_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/route_start"
                    android:layout_marginEnd="4dp"
                    android:enabled="false"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:id="@+id/btn_route_stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/route_stop"
                    android:layout_marginStart="4dp"
                    android:enabled="false"
                    style="@style/Widget.AppCompat.Button.Colored"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <!-- 结束路径面板内容区域 -->
</LinearLayout>